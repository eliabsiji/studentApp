                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>


        <Grid Padding="10">
            <Frame HeightRequest="70" Style="{StaticResource CardView}">
                <Grid Padding="0" ColumnDefinitions="*,*">
                    <StackLayout Grid.Column="0" Padding="0" HorizontalOptions="StartAndExpand">
                        <Label Text="Session :" FontSize="20" />
                    </StackLayout>
                    <StackLayout Grid.Column="1" Padding="0,0,10,0" HorizontalOptions="StartAndExpand">
                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Session}" FontSize="20"/>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>


        <Grid Padding="10">
            <Frame HeightRequest="70" Style="{StaticResource CardView}">
                <Grid Padding="0" ColumnDefinitions="*,*">
                    <StackLayout Grid.Column="0" Padding="0" HorizontalOptions="StartAndExpand">
                        <Label Text="Level :" FontSize="20" />
                    </StackLayout>
                    <StackLayout Grid.Column="1" Padding="0,0,10,0" HorizontalOptions="StartAndExpand">
                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Level}" FontSize="20"/>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>


        <Grid Padding="10">
            <Frame HeightRequest="70" Style="{StaticResource CardView}">
                <Grid Padding="0" ColumnDefinitions="*,*">
                    <StackLayout Grid.Column="0" Padding="0" HorizontalOptions="StartAndExpand">
                        <Label Text="Department :" FontSize="20" />
                    </StackLayout>
                    <StackLayout Grid.Column="1" Padding="0,0,10,0" HorizontalOptions="StartAndExpand">
                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Dept}" FontSize="20"/>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>


        <Grid Padding="10">
            <Frame HeightRequest="70" Style="{StaticResource CardView}">
                <Grid Padding="0" ColumnDefinitions="*,*">
                    <StackLayout Grid.Column="0" Padding="0" HorizontalOptions="StartAndExpand">
                        <Label Text="Qualification :" FontSize="20" />
                    </StackLayout>
                    <StackLayout Grid.Column="1" Padding="0,0,10,0" HorizontalOptions="StartAndExpand">
                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Qualification}" FontSize="20"/>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>


        <Grid Padding="10">
            <Frame HeightRequest="70" Style="{StaticResource CardView}">
                <Grid Padding="0" ColumnDefinitions="*,*">
                    <StackLayout Grid.Column="0" Padding="0" HorizontalOptions="StartAndExpand">
                        <Label Text="Religion :" FontSize="20" />
                    </StackLayout>
                    <StackLayout Grid.Column="1" Padding="0,0,10,0" HorizontalOptions="StartAndExpand">
                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Religion}" FontSize="20"/>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>



       </VerticalStackLayout>

        
    </ScrollView>
</ContentPage>